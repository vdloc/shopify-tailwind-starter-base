{% schema %}
{
  "name": "Product Carousel Section",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "product_name",
          "label": "Product Name"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product Price"
        },
        {
          "type": "textarea",
          "id": "product_description",
          "label": "Product Description"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="product-carousel-section">
  <div class="products">
    {% for block in section.blocks %}
      <div class="product-item">
        <img src="{{ block.settings.image | img_url: 'medium' }}" alt="{{ block.settings.product_name }}">
        <div class="product-details">
          <h3>{{ block.settings.product_name }}</h3>
          <p class="price">{{ block.settings.product_price }}</p>
          <p>{{ block.settings.product_description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
